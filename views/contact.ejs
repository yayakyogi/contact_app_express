<h1>Halaman Contact</h1>
<br/>
<a href="/contact/add" class="btn btn-primary mb-2">Form Tambah Data Contact</a> 

<% if (msg.length !== 0) { %>
  <div class="alert alert-success" role="alert">
    <%= msg %>
  </div>
<% } %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">No Handphone</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% if (contacts.length === 0) { %>
     <tr><td colspan="4" class="text-center">Data kosong</td></tr>
    <% } %>
    <% contacts.forEach((contact,i) => { %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= contact.nama %></td>
        <td><%= contact.nohp %></td>
        <td>
          <a href="/contact/<%= contact.nama %>" class="btn badge bg-success rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>